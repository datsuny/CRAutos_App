@model CRAutos_App.ETL.datosDetalle

@{
    ViewBag.Title = "RegistroDetallesVehiculo";
}


<!-- about breadcrumb -->
<section class="w3l-about-breadcrumb position-relative text-center">
    <div class="breadcrumb-bg breadcrumb-bg-about py-sm-5 py-4">
    </div>
</section>
<!-- //about breadcrumb -->
<section class="w3l-contact-11">
    <div class="form-41-mian py-5">
        <div class="container py-lg-4">
            <div class="row align-form-map">
                <div class="col-lg-6 contact-left pr-lg-4">
                    <div class="partners">
                        <div class="cont-details">
                            <div class="title-content text-left">
                                <h3 class="hny-title">Registro de detalles del vehículo</h3>
                            </div>
                            <p class="mt-3 mb-4 pr-lg-5">
                                En esta seccion de la pagina podra ingresar los datos obligatorios que se necesitan para registrar los detetalles del vehículo en CRautos.
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 form-inner-cont">
                    <div class="title-content text-left">
                        <h3 class="hny-title mb-lg-5 mb-4"></h3>
                    </div>
                    <h6 class="mb-4"> Detalle del vehículo</h6>
                    @using (Html.BeginForm("RegistroDetallesVehiculo", "Publicaciones", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                <div class="row con-two">
                    <div class="col-lg-6 form-input">
                        @Html.Label("Kilometraje:")
                        @Html.TextBoxFor(Model => Model.Kilometraje)
                    </div>
                        @Html.TextBoxFor(Model => Model.Cilindraje, new { placeholder = "Cilindraje", @class = "col-lg-6 form-input" })

                        @Html.TextBoxFor(Model => Model.Transmision, new { placeholder = "Transmision", @class = "col-lg-6 form-input" })

                        @Html.TextBoxFor(Model => Model.Color, new { placeholder = "Color del vehículo" })

                        @Html.Label("Numero de puertas:", new { @class = "col-lg-6 form-input" })
                        @Html.TextBoxFor(Model => Model.NumeroPuertas)

                        @Html.Label("Año de fabricacion:", new { @class = "col-lg-6 form-input" })
                        @Html.TextBoxFor(Model => Model.Año)

                        @Html.TextBoxFor(Model => Model.Combustible, new { placeholder = "Tipo de combustible" })
                    </div>
                    @Html.Label("Extras de un vehículo:", new { @class = "col-lg-6 form-input" })
                    <div class="col-lg-1 form-check">
                        <table>
                            <tr>
                                <td>
                                    @for (int i = 0; i < Model.listaExtras.Count; i++)
                                    {
                                        @Html.CheckBoxFor(m => Model.listaExtras[i].isCheck)
                                        @Model.listaExtras[i].NombreExtra
                                        @Html.HiddenFor(m => Model.listaExtras[i].IDExtra)
                                        @Html.HiddenFor(m => Model.listaExtras[i].NombreExtra)
                                        <br />
                                    }
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div class="submit-button text-lg-right">
                        <button type="submit" class="btn btn-style">Registrar Detalles de vehículo</button>
                    </div>

                    }
                </div>
            </div>
        </div>
    </div>

</section>

<!-- //contact-form -->
<!-- Template JavaScript -->
<script src="~/js/jquery-3.3.1.min.js"></script>
<script src="~/js/theme-change.js"></script>
<!-- disable body scroll which navbar is in active -->
<script>
    $(function () {
        $('.navbar-toggler').click(function () {
            $('body').toggleClass('noscroll');
        })
    });
</script>
<!-- disable body scroll which navbar is in active -->
<!--/MENU-JS-->
<script>
    $(window).on("scroll", function () {
        var scroll = $(window).scrollTop();

        if (scroll >= 80) {
            $("#site-header").addClass("nav-fixed");
        } else {
            $("#site-header").removeClass("nav-fixed");
        }
    });

    //Main navigation Active Class Add Remove
    $(".navbar-toggler").on("click", function () {
        $("header").toggleClass("active");
    });
    $(document).on("ready", function () {
        if ($(window).width() > 991) {
            $("header").removeClass("active");
        }
        $(window).on("resize", function () {
            if ($(window).width() > 991) {
                $("header").removeClass("active");
            }
        });
    });
</script>